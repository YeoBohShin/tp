@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyClassManager" as ReadOnlyClassManager
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class ClassManager
Class ModelManager
Class UserPrefs

Class UniqueStudentList
Class Student
Class ClassDetails
Class Email
Class Name
Class Phone
Class Tag
Class StudentNumber

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

ClassManager .up.|> ReadOnlyClassManager

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyClassManager
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniqueStudentList
UniqueStudentList --> "~* all" Student
Student *--> Name
Student *--> Phone
Student *--> Email
Student *--> ClassDetails
Student *--> StudentNumber
Student *--> "*" Tag

UniqueStudentList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Email
Email -[hidden]right-> ClassDetails
ClassDetails -[hidden]right-> StudentNumber

Class HiddenClassDetails #FFFFFF
ClassDetails ..> HiddenClassDetails

ModelManager --> "~* filtered" Student
@enduml
